<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 外部边框 -->
    <stroke
        android:width="1dp"
        android:color="#FF0000" /> <!-- 将边框颜色改为红色 -->

    <!-- 内部内容 -->
    <stroke
        android:width="0.7dp"
        android:color="#023E47" />
    <corners
        android:radius="5dp" />
    <gradient
        android:startColor="#5BA4E1"
        android:endColor="#D1FF9B"
        android:angle="45"/>

    <!-- 内容大小 -->
    <size
        android:width="21dp"
        android:height="21dp" />

    <!-- 外部边框与内部内容的距离 -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp"/>
</shape>
